class ConaryREST(CPackageRecipe):
    name = 'conary-rest'
    version = '0'

    buildRequires = [
        'conary:python',
        'conary-repository:python',
        'python:devel',
        'restlib:python',
        'xobj:python',
      ]

    def setup(r):
        r.addMercurialSnapshot('http://hg.rpath.com/conary-rest')
        r.Make()
        r.MakeInstall()
